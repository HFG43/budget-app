<h1>Add a new Expense</h1>

<%= form_with(model: @expense, url: group_expenses_path(@group)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :amount %>
  <%= f.text_field :amount %>

  <%= f.label :group_ids, 'Select Groups' %>
  <%= f.collection_select :group_ids, @groups, :id, :name, { include_hidden: false }, { multiple: true } %>

  <%= f.submit 'Create Expense' %>
<% end %>



<%= link_to "Back", groups_path %>